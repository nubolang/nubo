import nubo from "@nubo"

event click();
event updateClicks(count: int);

server {
    clicks = 0;

    sub click() {
        clicks += 1;
        pub updateClicks(clicks);
    }

    return nubo.App(App(clicks))
}

component App(clicks) {
    fn handleClick() {
        pub click();
    }

    sub updateClicks(count) {
        clicks = count;
    }

    return <button onClick="handleClick">Clicked { clicks } times.</button>;
}
